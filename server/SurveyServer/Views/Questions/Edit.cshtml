@model SurveyServer.Models.Question

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionKey" />
            <div class="form-group">
                <label asp-for="QuestionNum" class="control-label"></label>
                <input asp-for="QuestionNum" class="form-control" />
                <span asp-validation-for="QuestionNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionDescription" class="control-label"></label>
                <input asp-for="QuestionDescription" class="form-control" />
                <span asp-validation-for="QuestionDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RefSurveyID" class="control-label"></label>
                <input asp-for="RefSurveyID" readonly="readonly" class="form-control" asp-items="ViewBag.RefSurveyID" />
                <span asp-validation-for="RefSurveyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionType" class="control-label"></label>
                <select asp-for="QuestionType" asp-items="@Html.GetEnumSelectList(typeof(QuestionType))" class="form-control"></select>
                <span asp-validation-for="QuestionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Options" class="control-label"></label>
                Please split options with ; likes:"Low;Mid;High"
                <input asp-for="Options" class="form-control" />
                <span asp-validation-for="Options" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
