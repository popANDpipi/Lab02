<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx1"
        android:text="Please Unlock!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        />

    <com.wangnan.library.GestureLockView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/g_lock"
        android:layout_below="@+id/tx1"
        android:layout_marginTop="20dp"
        app:normal_color="#F46F21"
        app:press_color="#F46F21"
        app:error_color="#C0C0C0"
        app:is_use_animation="true"
        app:animation_scale_mode="reverse"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sub"
        android:layout_centerHorizontal="true"
        android:text="FINISH"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="20sp"
        android:onClick="click_submit"
        android:background="@color/colorPrimary"
        android:visibility="invisible"
        />
</RelativeLayout>